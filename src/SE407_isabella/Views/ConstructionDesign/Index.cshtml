@model SE407_isabella.ConstructionDesignViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (TempData["ResultMessage"] != null)
{
    <p class="alert alert-success" id="successMessage">
        @TempData["ResultMessage"]
    </p>
}
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("Index", "ConstructionDesign", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewConstructionDesign.ConstructionDesignId)
                    @Html.TextBoxFor(Model => Model.NewConstructionDesign.ConstructionDesignId,
                   new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewConstructionDesign.ConstructionDesignId"
                          class="text-danger"></span>
                </div>

                <div class="form-group">
                    @Html.LabelFor(Model => Model.NewConstructionDesign.ConstructionDesignType)
                    @Html.TextBoxFor(Model => Model.NewConstructionDesign.ConstructionDesignType,
                   new { @class = "form-control" })
                    <span asp-validation-for="@Model.NewConstructionDesign.ConstructionDesignType"
                          class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-lg" />
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h2> List of construction designs:</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th> ConstructionDesign ID </th>
                        <th> ConsturctionDesign Type </th>   
                        <th></th>                   
                        <th></th>
                    </tr>
                    @foreach (var constructiondesign in Model.ConstructionDesignList)
            {
                        <tr>
                            <td>@constructiondesign.ConstructionDesignId</td>
                            <td>@constructiondesign.ConstructionDesignType</td>
                            <td><a asp-action="Edit" asp-route-id="@constructiondesign.ConstructionDesignId">Edit</a></td>
                            <td><a asp-action="Delete" asp-route-id="@constructiondesign.ConstructionDesignId" onclick='return confirm("Are your sure?");'>Delete</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>